doctype html
html
  head
    title Add movie
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body
    h1 New movie
    div.col-sm-6
      form(action='/addmovie', method='POST')
        div.form-group
          label Title
          input.form-control(type="text", name="title", placeholder='Title')
        div.form-group
          label Director
          input.form-control(type="text", name="director", placeholder='Director')
        div.form-group
          label Year
          input.form-control(type="number", name="year", placeholder='Year') 
          br
        div.form-group
          button.btn-primary.btn(type='submit', value='Add') Add